# Core
SERVER_NAME=Your Discord Server Name
DISCORD_TOKEN=replace_me

# AI provider routing
# anthropic = official Anthropic API
# puter_js = executes Puter.js in headless browser
# openai_compatible = proxies exposing /chat/completions
AI_PROVIDER=anthropic
AI_MODEL=claude-sonnet-4-6
AI_BASE_URL=

# Direct Anthropic key (used when AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=replace_me

# OpenAI-compatible gateway key (used when AI_PROVIDER=openai_compatible)
OPENAI_COMPATIBLE_API_KEY=

# Puter.js settings (used when AI_PROVIDER=puter_js)
PUTER_SCRIPT_URL=https://js.puter.com/v2/
PUTER_TIMEOUT_SECONDS=90

# Twitch
TWITCH_CLIENT_ID=replace_me
TWITCH_CLIENT_SECRET=replace_me

# Data stores (used by bot and workers)
POSTGRES_DB=nexus
POSTGRES_USER=nexus
POSTGRES_PASSWORD=change_me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Computed connection strings (override if needed)
DATABASE_URL=postgresql+asyncpg://nexus:change_me@postgres:5432/nexus
REDIS_URL=redis://redis:6379/0

# Runtime
LOG_LEVEL=INFO
TZ=UTC
